include ../btn/btn
include ../field/field

mixin check-form({ number, lux, payPerDay, serviceCharge, serviceChargeDiscount, additionalServiceCharge, days })
  form.check-form
    .check-form__item
      .check-form__item-group
        h2.check-form__number
          span.check-form__number-ico №
          | #{number}
        if lux
          +btn({text: 'Люкс', theme: 'link'})
        .check-form__price_default
          b.check-form__price-text 9 990₽
          |  в сутки
    .check-form__item#checkFormCalendar
      .check-form__group-field
        .check-form__field
          +field({ theme: 'with-dropdown', text: 'Прибытие', id: 'check-form__from', value: "ДД.ММ.ГГГГ" })
        .check-form__field
          +field({ theme: 'with-dropdown', text: 'Выезд', id: 'check-form__to', value: "ДД.ММ.ГГГГ" })
    .check-form__item
      +field({
        theme: 'with-dropdown',
        text: 'Гости',
        id: 'guests',
        value: "Сколько гостей"
      })
    .check-form__item
      .check-form__conclusion
        span.check-form__text #{payPerDay}₽ х #{days} суток
        span.check-form__text #{payPerDay * days}₽
      .check-form__conclusion
        span.check-form__text.check-form__text--info Сбор за услуги: скидка #{serviceChargeDiscount}₽
        span.check-form__text #{serviceCharge}₽
      .check-form__conclusion
        span.check-form__text.check-form__text--info Сбор за дополнительные услуги
        span.check-form__text #{additionalServiceCharge}₽
    .check-form__item
      .check-form__final-price
        .check-form__item-group
          h2.check-form__final-price-text Итого
          .check-form__price-line
          h2.check-form__final-price-text #{(payPerDay * days) + serviceCharge + additionalServiceCharge - serviceChargeDiscount}₽
    .check-form__item
      +btn({text: 'Забронировать', theme: 'arrow'})
