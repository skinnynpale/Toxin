mixin sign-up()
    form.sign-up
        .sign-up__wrapper
            h1.sign-up__title Регистрация аккаунта
            .sign-up__item#personData
                +field({
                  placeholder: 'Имя',
                  name: 'name',
                  labelledby: 'personData'
                })
                +field({
                  placeholder: 'Фамилия',
                  name: 'surname',
                  labelledby: 'personData'
                })
                +radio({
                  text: 'Мужчина',
                  id: 'man',
                  name: 'sex',
                  value: 'man',
                  checked: true
                })
                +radio({
                  text: 'Женщина',
                  id: 'woman',
                  name: 'sex',
                  value: 'woman'
                })
            .sign-up__item
                .sign-up__birthday
                    +field({
                      theme: 'with-label',
                      className: 'sign-up',
                      text: 'Дата рождения',
                      placeholder: "ДД.ММ.ГГГГ",
                      name: "birthday",
                      type: 'date'
                    })
            .sign-up__item#signUpData
                label.sign-up__label Данные для входа в сервис
                +field({
                  placeholder: 'Email',
                  name: 'email',
                  type: 'email',
                  labelledby: 'signUpData'
                })
                +field({
                  placeholder: 'Пароль',
                  name: 'password',
                  type: 'password',
                  labelledby: 'signUpData'
                })
                +toggle('Получать спецпредложения', 'receive-offers')
            .sign-up__item
                .sign-up__btn-buy
                    +btn({
                      text: 'Перейти к оплате',
                      theme: 'arrow'
                    })
            .sign-up__question
                p Уже есть аккаунт на Toxin
                +btn({
                  text: 'Войти',
                  size: 'xl',
                  href: "/../sign-in-page/sign-in-page.pug"
                })
