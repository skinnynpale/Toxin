mixin pagination({ current, totalPages, totalVars } = "" )
  .pagination
    .pagination__pages
      a(href="#!").pagination__item.pagination__item_current= current
      a(href="#!").pagination__item= current + 1
      a(href="#!").pagination__item= current + 2
      a(href="#!").pagination__item.pagination__item_disabled ...
      a(href="#!").pagination__item= totalPages
      a(href="#!").pagination__item.pagination__item_next
        svg.pagination__arrow(width="18", height="18", xmlns="http://www.w3.org/2000/svg")
          path(d="M9 0.984375L17.0156 9L9 17.0156L7.59375 15.6094L13.1719 9.98438H0.984375V8.01562H13.1719L7.59375 2" +
          ".39062L9 0.984375Z")
    .pagination__result= `1 – 12 из ${totalVars}+ вариантов аренды`
