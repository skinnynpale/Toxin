mixin btn({ text, theme, size, href = "#!" } =  '')

  case theme
    when 'arrow'
      a(class="btn btn_theme_gradient btn_with-arrow" href=href)= text
      svg.btn_with-arrow__svg(width='18', height='18', xmlns='http://www.w3.org/2000/svg')
        path(d='M9 0.984375L17.0156 9L9 17.0156L7.59375 15.6094L13.1719 9.98438H0.984375V8.01562H13.1719L7.59375 2.39062L9 0.984375Z')

    when 'gradient'
      a(class="btn btn_theme_gradient" href=href)= text

    when 'link'
      a(class="btn btn_theme_link" href=href)= text

    default
      case size
        when 'l'
          a(class="btn btn_size_l" href=href)= text
        when 'xl'
          a(class="btn btn_size_xl" href=href)= text
        default
          a(class="btn" href=href)= text
