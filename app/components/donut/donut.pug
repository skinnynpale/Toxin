mixin donut({votes})
  .donut
    .donut__circle
      svg.donut__svg(width="100%" height="100%")
        circle(r="56" cx="60" cy="55" stroke="url(#orange-gradient)" stroke-width="5" fill="none" stroke-dasharray="172 400" transform="rotate(90 58 58)")
        defs
          linearGradient(id="orange-gradient")
            stop(offset="0" stop-color="#FFE29C")
            stop(offset="1" stop-color="#FFBA9C")
        circle(r="56" cx="54" cy="60" stroke="url(#purple-gradient)" stroke-width="10" fill="none" stroke-dasharray="79 300" transform="rotate(-90 58 58)")
        defs
          linearGradient(id="purple-gradient")
            stop(offset="0" stop-color="#BA9CFE")
            stop(offset="1" stop-color="#A59FFC")
        circle(r="60" cx="57" cy="56" fill="transparent" stroke="url(#green-gradient)" stroke-width="5" stroke-dasharray="87 400")
        defs
          linearGradient(id="green-gradient")
            stop(offset="0" stop-color="#6cd1c1")
            stop(offset="1" stop-color="#6ecf99")
        g(class="donut__text")
          text(x="38px", y="60px") #{votes}
          text(x="29px", y="62px" transform="translate(0 19)") голосов
    ul.donut__info
      li.donut__char
        .donut__lap.donut__lap_orange
        .donut__lap-value Великолепно
      li.donut__char
        .donut__lap.donut__lap_green
        .donut__lap-value Хорошо
      li.donut__char
        .donut__lap.donut__lap_purple
        .donut__lap-value Удовлетворительно
      li.donut__char
        .donut__lap.donut__lap_black
        .donut__lap-value Разочарован
