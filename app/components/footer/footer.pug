      p.sub-footer__copyright Copyright © 2018 Toxin отель. Все права зачищены.
      nav.sub-footer__nav
        ul.footer-soc
          li.footer-soc__list: a.footer-soc__link(href="#!"): img.footer-soc__ico(src="../../components/footer/img/twitter.svg", alt="Twitter")
          li.footer-soc__list: a.footer-soc__link(href="#!"): img.footer-soc__ico(src="../../components/footer/img/fb.svg", alt="FaceBook")
