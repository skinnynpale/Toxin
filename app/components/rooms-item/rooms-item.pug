mixin rooms-item(parameters)
  - var img = parameters.img
  - var num = parameters.num
  - var lux = parameters.lux
  - var price = parameters.price
  - var stars = parameters.stars
  - var reviews = parameters.reviews
    .rooms-item
      a(href="/../page-room/page-room.pug" class="rooms-item__link")
      .rooms-item__image
        img.rooms-item__img(src=img, alt="Фотография номера")
        include ../../components/image-helpers/image-helpers
      .rooms-item__wrapper
        .rooms-item__info
          h2.rooms-item__num
            span.rooms-item__num-ico №
            h2.rooms-item__num= num
          if (lux === true)
            +link('', 'Люкс')
          p.rooms-item__price
            b.rooms-item__price-text= price + "₽"
            |  в сутки
        .rooms-item__rating
          +rating(stars, 5)
          p.rooms-item__reviews
            b.rooms-item__reviews-text= reviews
            |  Отзывов
