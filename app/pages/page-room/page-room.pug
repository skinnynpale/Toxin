extends ../template-base

block title
  title Отель «Toxin» | №888 Люкс 9 990₽ в сутки

block styles
  link(rel="stylesheet", href="https://fonts.googleapis.com/icon?family=Material+Icons")
  link(rel="stylesheet" href="page-room.sass")

block content
  +header('non-authorized')

  main.page-room
    .gallery
      figure.gallery__item.gallery__item--1
        img.gallery__img(src="img/image.jpg", alt="Фотография номера")
      figure.gallery__item.gallery__item--2
        img.gallery__img(src="img/image-2.jpg", alt="Фотография номера")
      figure.gallery__item.gallery__item--3
        img.gallery__img(src="img/image-3.jpg", alt="Фотография номера")

    .room-details
      .room-details__container
        .room-details__info-grid
          .room-details__advan-list
            h2.room-details__info-title Сведения о номере
            ul.advantages
              li.advantages__item
                +advantages({
                  ico: "insert_emoticon",
                  title: "Комфорт",
                  text: "Шумопоглощающие стены"
                })
              li.advantages__item
                +advantages({
                  ico: "location_city",
                  title: "Удобство",
                  text: "Окно в каждой из спален"
                })
              li.advantages__item
                +advantages({
                  ico: "whatshot",
                  title: "Уют",
                  text: "Номер оснащен камином"
                })
          .room-details__impressions
            h2.room-details__info-title Впечатления от номера
            .donut
              .donut__circle
                include ../../components/donut/donut
              .donut__info
                .donut__char
                  .donut__lap.donut__lap_orange
                  .donut__lap-value Великолепно
                .donut__char
                  .donut__lap.donut__lap_green
                  .donut__lap-value Хорошо
                .donut__char
                  .donut__lap.donut__lap_purple
                  .donut__lap-value Удовлетворительно
                .donut__char
                  .donut__lap.donut__lap_black
                  .donut__lap-value Разочарован

          .room-details__reviews
            .room-details__title-group
              h2.room-details__info-title Отзывы посетителей номера
              span.room-details__info-value 2 отзыва
            .reviews
              .reviews__item
                .reviews__dynamics
                  img.reviews__profile-photo(src="img/author-1.jpg")
                  .reviews__likes: +like(12, true)
                .reviews__comment
                  b.reviews__author Мурад Сарафанов
                  .reviews__date 5 дней назад
                  .reviews__text Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.
              .reviews__item
                .reviews__dynamics
                  img.reviews__profile-photo(src="img/author-2.jpg")
                  .reviews__likes: +like(2)
                .reviews__comment
                  b.reviews__author Патрисия Стёклышкова
                  .reviews__date Неделю назад
                  .reviews__text Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент

          .room-details__rules
            h2.room-details__info-title Правила
            ul.rules-list
              +bullet-item("Нельзя с питомцами")
              +bullet-item("Без вечеринок и мероприятий")
              +bullet-item("Время прибытия — после 13:00, а выезд до 12:00")
          .room-details__cancel
            h2.room-details__info-title Отмена
            p.room-details__cancel-text Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
        include ../../components/check-form/check-form

  +footer('full')

  script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js")
  script(src="page-room.js")
