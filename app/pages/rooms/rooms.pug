extends ../template-base

block title
  title Отель «Toxin» | Номера, которые мы для вас подобрали

block styles
  link(rel="stylesheet" href="rooms.sass")

block content
  +header('non-authorized')

  main.main
    .main__container
      .rooms-filter
        .rooms-filter__item
          .t-field.rooms-filter__field
            +field({theme: 'with-dropdown', text: 'Даты пребывания в отеле', id: 'dateFilter'})(value="Выберите дату" readonly)
          .t-field.rooms-filter__field
            +field({
              theme: 'with-dropdown',
              text: 'Гости',
              id: 'guests'
            })(value="Сколько гостей" readonly)
        .rooms-filter__item
          label.rooms-filter__label Диапазон цены
          span.rooms-filter__values#rangeSliderRoomValue
          .range-slider
            .range-slider__app
              input(type="text" class="js-range-slider" name="my_range" value="")
              p.range-slider__info Стоимость за сутки пребывания в номере
        .rooms-filter__item
          label.rooms-filter__label Привелегии
          .rooms-filter__checkbox
            +checkbox({text: 'Можно курить', id: 'smoke'})
            +checkbox({text: 'Можно с питомцами', id: 'pets', check: true})
            +checkbox({text: 'Можно пригласить гостей (до 10 человек)', id: 'guestsCheck', check: true})
        .rooms-filter__item
          label.rooms-filter__label Доступность
          .rooms-filter__checkbox
            +checkbox({ theme: "rich", title: 'Широкий коридор', text: 'Ширина коридоров в номере не менее 91 см.', id: 'corridor'})
            +checkbox({ theme: "rich", title: 'Помощник для инвалидов', text: 'На 1 этаже вас встретит специалист  и проводит до номера.', id: 'helper'})
        .rooms-filter__item
          +field({
            theme: 'with-dropdown',
            text: 'Удобства номера',
            id: 'comfortFilter'
          })(value="Выберите удобства" readonly)
        .rooms-filter__item
          label.checkbox__title_expandable#moreComfortFilter Дополнительные удобства
          .checkbox_expandable#moreComfortFilterWrapper
            +checkbox({text: 'Завтрак', id: 'breakfast'})
            +checkbox({text: 'Письменный стол', id: 'desk', check: true})
            +checkbox({text: 'Стул для кормления', id: 'feedingChair', check: true})
            +checkbox({text: 'Кроватка', id: 'crib', check: true})
            +checkbox({text: 'Телевизор', id: 'tv'})
            +checkbox({text: 'Шампунь', id: 'shampoo'})
            +checkbox({text: 'Интернет', id: 'internet'})
            +checkbox({text: 'Связь с космосом', id: 'spaceConnection'})
      .rooms
